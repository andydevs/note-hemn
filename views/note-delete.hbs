<div class="note-delete">
    <h2 class="delete-confirm">Are you sure you want to delete this note?</h2>
    <div class="note-snippet">
        <ul class="note-labels">
            {{#each note.labels}}
                <li class="note-label">
                    {{ this }}
                </li>
            {{/each}}
        </ul>
        <div class="note-content">
            {{ note.content }}
        </div>
    </div>
    <form class="delete-confirm-form" action="/{{ note._id }}/delete" method="post">
        <input class="delete-confirm-form-submit"
            type="submit" name="confirm" value="Confirm">
        <a class="delete-confirm-form-cancel"
            href="/">Cancel</a>
    </form>
</div>
