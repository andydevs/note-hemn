<div class="container-fluid">
    <h2 class="my-3">Are you sure you want to delete this note?</h2>
    <div class="card my-3">
        <div class="card-header">
            {{#each labels}}
                <span style="color:{{ color }};">{{ name }}</span>
            {{/each}}
        </div>
        <div class="card-body">
            <p class="card-text">{{ content }}</p>
        </div>
    </div>
    <form action="/note/{{ _id }}/delete" method="post">
        <input class="btn btn-danger"
               type="submit"
               name="confirm"
               value="Confirm">
        <a class="btn btn-secondary" href="/">Cancel</a>
    </form>
</div>
