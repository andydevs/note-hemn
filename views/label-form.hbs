<div class="container-fluid">
    {{> error-alert}}

    <form class="my-3" action="/label/{{ label._id }}/edit" method="post">
        {{!-- Label name --}}
        <div class="form-group">
            <label for="name">Name:</label>
            <input class="form-control"
                   type="text"
                   name="name"
                   value="{{ label.name }}">
        </div>

        {{!-- Submit --}}
        <input class="btn btn-primary"
               type="submit"
               name="submit"
               value="Submit">
    </form>
</div>
