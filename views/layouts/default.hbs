<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title>Note HEMN</title>
    </head>
    <body>
        <div class='note-hemn-navbar'>
            {{#if user}}
                <p>Name: {{ user.name }}</p>
                <p>Email: {{ user.email }}</p>
                <a class='note-control-login' href="/user/logout">Logout</a>
            {{else}}
                <a class='note-control-login' href="/user/login">Login</a>
                <a class='note-control-signup' href="/user/signup">Signup</a>
            {{/if}}
        </div>
        <div class='note-hemn-content'>
            {{{ body }}}
        </div>
    </body>
</html>
