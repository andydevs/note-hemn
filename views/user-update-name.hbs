<div class="container-fluid">
    {{!-- Title --}}
    <h3 class="my-3">Update Name</h3>

    {{!-- Edit Name Form --}}
    <form class="my-3"
          action="/user/update/name"
          method="post">
          
        {{!-- New Name --}}
        <div class="form-group">
            <label for="name">New Name</label>
            <input class="form-control"
                   type="text"
                   name="name"
                   value="{{ user.name }}">
        </div>

        {{!-- Submit --}}
        <input class="btn btn-primary"
               type="submit"
               name="update"
               value="Update Name">
    </form>
</div>
