<div class="container-fluid">
    {{> error-alert}}
    <ul class="my-3 list-group">
        {{#each labels}}
            <li class="list-group-item list-group-item-{{ color }} d-flex justify-content-between align-items-center">
                <span>{{ name }}</span>
                <span>
                    <a class="mr-2" href="/label/{{ _id }}/edit">
                        <span class="fa fa-edit text-{{ textColor labels }}"></span>
                    </a>
                    <a class="ml-2" href="/label/{{ _id }}/delete">
                        <span class="fa fa-trash text-{{ textColor labels }}"></span>
                    </a>
                </span>
            </li>
        {{/each}}
    </ul>
</div>
