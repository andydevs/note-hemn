<div class="note-snippets-group">
    {{#each notes}}
        <div class="note-snippet">
            <ul class="note-labels">
                {{#each labels}}
                    <li class="note-label">
                        {{ this }}
                    </li>
                {{/each}}
            </ul>
            <div class="note-content">
                {{ content }}
            </div>
            <ul class="note-controls">
                <li class="note-control-item">
                    <a class="note-control note-control-view" href="/{{ _id }}">
                        View
                    </a>
                </li>
                <li class="note-control-item">
                    <a class="note-control note-control-edit" href="/{{ _id }}/edit">
                        Edit
                    </a>
                </li>
            </ul>
        </div>
    {{/each}}
</div>
